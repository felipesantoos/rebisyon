<% content_for :title, "Dashboard" %>
<% content_for :page_title, "Dashboard" %>

<div class="space-y-6">
  <%# Stats Cards %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="card">
      <h3 class="text-sm font-medium text-gray-500 mb-1">Due Today</h3>
      <p class="text-3xl font-semibold text-gray-900"><%= @total_due_cards %></p>
    </div>
    <div class="card">
      <h3 class="text-sm font-medium text-gray-500 mb-1">New Cards</h3>
      <p class="text-3xl font-semibold text-gray-900"><%= @total_new_cards %></p>
    </div>
    <div class="card">
      <h3 class="text-sm font-medium text-gray-500 mb-1">Learning</h3>
      <p class="text-3xl font-semibold text-gray-900"><%= @total_learning_cards %></p>
    </div>
  </div>

  <%# Decks Section %>
  <div class="card">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Your Decks</h2>
      <%= link_to "New deck", new_deck_path, class: "btn-primary" %>
    </div>

    <% if @deck_stats.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">No decks yet. Create your first deck to get started.</p>
        <%= link_to "Create your first deck", new_deck_path, class: "btn-primary inline-block" %>
      </div>
    <% else %>
      <div class="space-y-2">
        <% @deck_stats.each do |deck| %>
          <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md hover:bg-gray-100 transition-colors">
            <span class="text-gray-900 font-medium"><%= deck.name %></span>
            <%= link_to "View", deck_path(deck), class: "text-blue-600 hover:text-blue-700 text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
