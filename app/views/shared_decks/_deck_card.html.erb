<%= link_to shared_deck_path(deck[:id]), class: "card block hover:shadow-md transition-shadow" do %>
  <%# Category tag %>
  <div class="mb-2">
    <span class="tag-chip"><%= deck[:category] %></span>
  </div>

  <%# Title %>
  <h3 class="font-semibold text-lg text-gray-900 truncate"><%= deck[:title] %></h3>

  <%# Author %>
  <p class="text-gray-500 text-sm mt-0.5">by <%= deck[:author] %></p>

  <%# Description preview %>
  <p class="text-gray-600 text-sm mt-2 line-clamp-2"><%= deck[:description] %></p>

  <%# Footer: stars, downloads, cards, size %>
  <div class="flex items-center gap-3 mt-3 pt-3 border-t border-gray-100 text-sm text-gray-500">
    <%# Star rating %>
    <span class="inline-flex items-center gap-1">
      <% full_stars = deck[:stars].floor %>
      <% has_half = (deck[:stars] - full_stars) >= 0.5 %>
      <% (1..5).each do |i| %>
        <% if i <= full_stars %>
          <span class="text-yellow-400">&#9733;</span>
        <% elsif has_half && i == full_stars + 1 %>
          <span class="text-yellow-400">&#9733;</span>
        <% else %>
          <span class="text-gray-300">&#9733;</span>
        <% end %>
      <% end %>
      <span class="ml-0.5"><%= deck[:stars] %></span>
    </span>

    <%# Downloads %>
    <span class="inline-flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
      </svg>
      <%= number_with_delimiter(deck[:downloads]) %>
    </span>

    <%# Card count %>
    <span class="inline-flex items-center gap-1">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
      </svg>
      <%= number_with_delimiter(deck[:cards_count]) %>
    </span>

    <%# Size %>
    <span><%= deck[:size] %></span>
  </div>
<% end %>
