<% content_for :title, "Editing preset" %>
<% content_for :page_title, "Edit Preset" %>

<div class="space-y-6">
  <div>
    <h1 class="text-2xl font-semibold text-gray-900">Editing preset</h1>
    <p class="mt-1 text-sm text-gray-500">Update your preset information.</p>
  </div>

  <div class="card">
    <%= render "form", deck_options_preset: @preset %>
  </div>

  <div class="flex items-center space-x-4">
    <%= link_to "Show this preset", @deck_options_preset, class: "text-blue-600 hover:text-blue-700" %>
    <span class="text-gray-400">|</span>
    <%= link_to "Back to presets", deck_options_presets_path, class: "text-gray-600 hover:text-gray-900" %>
  </div>
</div>
