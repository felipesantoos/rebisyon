<% content_for :title, "Note types" %>
<% content_for :page_title, "Note Types" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold text-gray-900">Note Types</h1>
    <%= link_to "New note type", new_note_type_path, class: "btn-primary" %>
  </div>

  <div class="card">
    <% if @note_types.empty? %>
      <div class="text-center py-12">
        <p class="text-gray-500 mb-4">No note types yet. Create your first note type to get started.</p>
        <%= link_to "Create your first note type", new_note_type_path, class: "btn-primary inline-block" %>
      </div>
    <% else %>
      <div class="space-y-2">
        <% @note_types.each do |note_type| %>
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-md hover:bg-gray-100 transition-colors">
            <div>
              <h3 class="text-lg font-medium text-gray-900"><%= note_type.name %></h3>
              <p class="text-sm text-gray-500">
                <%= pluralize(note_type.field_names.count, "field") %> â€¢ 
                <%= pluralize(note_type.card_type_names.count, "card type") %>
              </p>
            </div>
            <%= link_to "View", note_type_path(note_type), class: "text-blue-600 hover:text-blue-700 font-medium" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
