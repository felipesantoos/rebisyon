<% content_for :title, "Note Types" %>
<% content_for :page_title, "Note Types" %>
<% mock = mock_note_types %>

<div class="max-w-3xl mx-auto space-y-6">
  <%# Action bar %>
  <div class="flex items-center justify-between">
    <p class="text-sm text-gray-500"><%= mock.size %> note types</p>
    <div class="flex items-center gap-2">
      <%= link_to new_note_type_path, class: "btn-primary inline-flex items-center gap-1.5" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add
      <% end %>
    </div>
  </div>

  <%# Note type list %>
  <div class="card p-0">
    <div class="divide-y divide-gray-200">
      <% mock.each do |nt| %>
        <div class="flex items-center justify-between px-4 py-3 hover:bg-gray-50 transition-colors group">
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
              <div>
                <h3 class="text-sm font-medium text-gray-900"><%= nt[:name] %></h3>
                <p class="text-xs text-gray-500">
                  <%= pluralize(nt[:fields].size, "field") %> &middot;
                  <%= pluralize(nt[:card_types].size, "card type") %> &middot;
                  <%= pluralize(nt[:note_count], "note") %>
                </p>
              </div>
            </div>
          </div>
          <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <a href="#" class="text-xs text-blue-600 hover:text-blue-700 font-medium">Fields</a>
            <a href="#" class="text-xs text-blue-600 hover:text-blue-700 font-medium">Cards</a>
            <button class="text-xs text-blue-600 hover:text-blue-700 font-medium">Rename</button>
            <button class="text-xs text-gray-400 hover:text-red-600 font-medium">Delete</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
