<% content_for :title, "Edit Card" %>
<% content_for :page_title, "Edit Card" %>

<div class="space-y-6">
  <div>
    <h1 class="text-2xl font-semibold text-gray-900">Edit Card</h1>
    <p class="mt-1 text-sm text-gray-500">Update card properties.</p>
  </div>

  <div class="card">
    <%= form_with(model: @card) do |form| %>
      <% if @card.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6" role="alert">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:
            </h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @card.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= form.label :flag, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :flag, (0..7).map { |n| ["Flag #{n}", n] },
              {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div class="flex items-center space-x-6">
          <div class="flex items-center">
            <%= form.check_box :suspended, class: "h-4 w-4 text-blue-600 border-gray-300 rounded" %>
            <%= form.label :suspended, class: "ml-2 text-sm text-gray-700" %>
          </div>

          <div class="flex items-center">
            <%= form.check_box :buried, class: "h-4 w-4 text-blue-600 border-gray-300 rounded" %>
            <%= form.label :buried, class: "ml-2 text-sm text-gray-700" %>
          </div>
        </div>

        <div class="flex items-center space-x-4 pt-4">
          <%= form.submit "Update Card", class: "btn-primary" %>
          <%= link_to "Cancel", card_path(@card), class: "btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
