<% content_for :title, "Browser Configuration" %>
<% content_for :page_title, "Browser Configuration" %>

<div class="max-w-2xl mx-auto space-y-6">
  <p class="text-sm text-gray-500">Configure the card browser display settings.</p>

  <div class="card">
    <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-4">Visible Columns</h3>
    <p class="text-xs text-gray-500 mb-3">Drag to reorder. Check/uncheck to show/hide.</p>
    <div class="space-y-1">
      <% [
        ["Sort Field", true],
        ["Card Type", true],
        ["Due", true],
        ["Deck", true],
        ["Tags", true],
        ["Interval", false],
        ["Ease", false],
        ["Lapses", false],
        ["Reviews", false],
        ["State", false],
        ["Flag", false],
        ["Note", false]
      ].each do |col, checked| %>
        <div class="flex items-center gap-3 px-3 py-2 bg-gray-50 rounded-md hover:bg-gray-100 cursor-move group">
          <svg class="w-4 h-4 text-gray-300 group-hover:text-gray-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11 18c0 1.1-.9 2-2 2s-2-.9-2-2 .9-2 2-2 2 .9 2 2zm-2-8c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0-6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm6 4c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
          </svg>
          <input type="checkbox" <%= "checked" if checked %>
                 class="w-4 h-4 text-blue-600 border-gray-300 rounded">
          <span class="text-sm text-gray-700"><%= col %></span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card">
    <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-4">Sort</h3>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="form-label">Sort by</label>
        <select class="form-select">
          <option selected>Sort Field</option>
          <option>Due</option>
          <option>Interval</option>
          <option>Ease</option>
          <option>Deck</option>
          <option>Card Type</option>
        </select>
      </div>
      <div>
        <label class="form-label">Direction</label>
        <select class="form-select">
          <option selected>Ascending</option>
          <option>Descending</option>
        </select>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-end gap-3">
    <button class="btn-secondary">Reset to Defaults</button>
    <button class="btn-primary">Save Configuration</button>
  </div>
</div>
