<%# Anki-style note editor with rich text toolbar and tag chips %>
<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6" role="alert">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% note.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex gap-6">
    <%# Main editor area %>
    <div class="flex-1 space-y-4">
      <%# Note Type + Deck selectors %>
      <div class="flex gap-4">
        <div class="flex-1">
          <label class="form-label">Type</label>
          <%= form.collection_select :note_type_id, note_types, :id, :name,
              { prompt: "Select..." },
              { class: "form-select",
                data: { controller: "note-type-selector", action: "change->note-type-selector#updateFields" } } %>
        </div>
        <div class="flex-1">
          <label class="form-label">Deck</label>
          <%= form.collection_select :deck_id, decks, :id, :name,
              { prompt: "Select..." },
              { class: "form-select" } %>
        </div>
      </div>

      <%# Field editors %>
      <div data-controller="note-fields" data-note-fields-note-type-id-value="<%= note.note_type_id %>">
        <% if note.note_type %>
          <% note.note_type.field_names.each do |field_name| %>
            <div class="mb-3" data-controller="rich-text media-upload" data-media-upload-field-name-value="<%= field_name %>">
              <label class="form-label"><%= field_name %></label>
              <%# Rich text toolbar %>
              <div class="flex items-center gap-0.5 px-2 py-1 bg-gray-50 border border-gray-300 border-b-0 rounded-t-md">
                <button type="button" data-action="click->rich-text#bold" class="p-1 hover:bg-gray-200 rounded text-gray-600" title="Bold (Ctrl+B)">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M15.6 10.79c.97-.67 1.65-1.77 1.65-2.79 0-2.26-1.75-4-4-4H7v14h7.04c2.09 0 3.71-1.7 3.71-3.79 0-1.52-.86-2.82-2.15-3.42zM10 6.5h3c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5h-3v-3zm3.5 9H10v-3h3.5c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5z"/></svg>
                </button>
                <button type="button" data-action="click->rich-text#italic" class="p-1 hover:bg-gray-200 rounded text-gray-600" title="Italic (Ctrl+I)">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M10 4v3h2.21l-3.42 8H6v3h8v-3h-2.21l3.42-8H18V4z"/></svg>
                </button>
                <button type="button" data-action="click->rich-text#underline" class="p-1 hover:bg-gray-200 rounded text-gray-600" title="Underline (Ctrl+U)">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M12 17c3.31 0 6-2.69 6-6V3h-2.5v8c0 1.93-1.57 3.5-3.5 3.5S8.5 12.93 8.5 11V3H6v8c0 3.31 2.69 6 6 6zm-7 2v2h14v-2H5z"/></svg>
                </button>
                <div class="w-px h-4 bg-gray-300 mx-1"></div>
                <button type="button" data-action="click->rich-text#cloze" class="p-1 hover:bg-gray-200 rounded text-gray-600 text-xs font-mono" title="Cloze deletion">
                  [...]
                </button>
                <button type="button" data-action="click->rich-text#attach" class="p-1 hover:bg-gray-200 rounded text-gray-600" title="Attach file">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
                  </svg>
                </button>
              </div>
              <%= text_area_tag "note[#{field_name}]", note.fields_json[field_name.to_s] || "",
                  rows: 3,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-b-md shadow-sm text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono",
                  data: { "note-fields-target": "field", "rich-text-target": "textarea", "media-upload-target": "textarea" } %>
            </div>
          <% end %>
        <% else %>
          <div class="text-sm text-gray-500 italic py-4">
            Select a note type to see fields
          </div>
        <% end %>
      </div>

      <%# Tags %>
      <div>
        <label class="form-label">Tags</label>
        <%= render "shared/tag_editor", tags: note.tags, field_name: "note[tags]" %>
      </div>
    </div>

    <%# Card preview panel (right side) %>
    <div class="w-72 flex-shrink-0 hidden lg:block">
      <div class="sticky top-4">
        <div class="card">
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Preview</h3>
          <div class="border border-gray-200 rounded-md p-4 min-h-[150px] bg-gray-50">
            <div class="text-center text-sm text-gray-400">
              Card preview will appear here
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Submit buttons %>
  <div class="flex items-center gap-3 pt-4 mt-4 border-t border-gray-200">
    <%= form.submit class: "btn-primary" %>
    <%= link_to "Cancel", notes_path, class: "btn-secondary" %>
  </div>
<% end %>
