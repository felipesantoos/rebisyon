<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6" role="alert">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% note.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :note_type_id, "Note Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.collection_select :note_type_id, note_types, :id, :name, 
          { prompt: "Select a note type..." }, 
          { 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
            data: { controller: "note-type-selector", action: "change->note-type-selector#updateFields" }
          } %>
    </div>

    <div>
      <%= form.label :deck_id, "Deck", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.collection_select :deck_id, decks, :id, :name, 
          { prompt: "Select a deck..." }, 
          { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
    </div>

    <div data-controller="note-fields" data-note-fields-note-type-id-value="<%= note.note_type_id %>">
      <% if note.note_type %>
        <% note.note_type.field_names.each do |field_name| %>
          <div class="mb-4" data-controller="media-upload" data-media-upload-field-name-value="<%= field_name %>">
            <%= form.label field_name, field_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= text_area_tag "note[#{field_name}]", note.fields_json[field_name.to_s] || "", 
                rows: 4,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                data: { "note-fields-target": "field", "media-upload-target": "textarea" } %>
            
            <%# Media upload area %>
            <div class="mt-2">
              <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-blue-400 transition-colors"
                   data-media-upload-target="dropZone"
                   data-action="dragover->media-upload#handleDragOver drop->media-upload#handleDrop dragleave->media-upload#handleDragLeave">
                <input type="file" 
                       class="hidden" 
                       data-media-upload-target="fileInput"
                       data-action="change->media-upload#handleFileSelect"
                       accept="image/*,audio/*,video/*">
                <button type="button" 
                        class="text-sm text-blue-600 hover:text-blue-700"
                        data-action="click->media-upload#triggerFileInput">
                  Upload media
                </button>
                <p class="text-xs text-gray-500 mt-1">or drag and drop</p>
              </div>
              
              <%# Uploaded media preview %>
              <div class="mt-2 space-y-2" data-media-upload-target="mediaPreview"></div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-sm text-gray-500 italic">
          Select a note type to see fields
        </div>
      <% end %>
    </div>

    <div>
      <%= form.label :tags, "Tags", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :tags, 
          value: note.tags.join(", "),
          placeholder: "tag1, tag2, tag3",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          data: { controller: "tag-input" } %>
      <p class="mt-1 text-xs text-gray-500">Separate tags with commas</p>
    </div>

    <div class="flex items-center">
      <%= form.check_box :marked, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= form.label :marked, "Marked", class: "ml-2 block text-sm text-gray-700" %>
    </div>

    <div class="flex items-center space-x-4 pt-4">
      <%= form.submit class: "btn-primary" %>
      <%= link_to "Cancel", notes_path, class: "btn-secondary" %>
    </div>
  </div>
<% end %>
