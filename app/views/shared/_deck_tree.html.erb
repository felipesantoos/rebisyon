<%# Reusable deck tree with indentation, collapse/expand, count columns %>
<%# Usage: render "shared/deck_tree", decks: mock_deck_tree, show_gear: true %>
<% decks = local_assigns[:decks] || mock_deck_tree %>
<% show_gear = local_assigns.fetch(:show_gear, true) %>
<% show_study = local_assigns.fetch(:show_study, true) %>

<% render_deck_rows = ->(items) do %>
  <% items.each do |deck| %>
    <tr class="deck-row group border-b border-gray-100 last:border-0"
        data-deck-id="<%= deck[:id] %>"
        data-deck-tree-target="row"
        data-depth="<%= deck[:depth] %>">
      <td class="py-2 pr-2">
        <div class="flex items-center" style="padding-left: <%= deck[:depth] * 20 %>px;">
          <% if deck[:children].any? %>
            <button class="collapsible-toggle w-5 h-5 flex items-center justify-center text-gray-400 hover:text-gray-600 mr-1"
                    data-action="click->deck-tree#toggleCollapse"
                    data-deck-id="<%= deck[:id] %>">
              <svg class="w-3.5 h-3.5 transition-transform duration-150" data-deck-tree-target="arrow<%= deck[:id] %>" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="transform: rotate(90deg)">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          <% else %>
            <span class="w-5 mr-1"></span>
          <% end %>
          <% if show_study %>
            <a href="#" class="text-sm text-gray-900 hover:text-blue-600 font-medium truncate">
              <%= deck[:name] %>
            </a>
          <% else %>
            <span class="text-sm text-gray-900 font-medium truncate"><%= deck[:name] %></span>
          <% end %>
        </div>
      </td>
      <td class="py-2 px-3 text-right">
        <span class="count-new text-sm font-semibold"><%= deck[:new_count] %></span>
      </td>
      <td class="py-2 px-3 text-right">
        <span class="count-learning text-sm font-semibold"><%= deck[:learn_count] %></span>
      </td>
      <td class="py-2 px-3 text-right">
        <span class="count-review text-sm font-semibold"><%= deck[:due_count] %></span>
      </td>
      <% if show_gear %>
        <td class="py-2 pl-3 text-right w-10">
          <div class="relative" data-controller="dropdown">
            <button data-action="click->dropdown#toggle"
                    class="invisible group-hover:visible p-1 text-gray-400 hover:text-gray-600 rounded hover:bg-gray-100">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </button>
            <div data-dropdown-target="menu" class="hidden absolute right-0 mt-1 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-20 py-1">
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Rename</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Options</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Export</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Create Subdeck</a>
              <hr class="my-1 border-gray-200">
              <a href="#" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50">Delete</a>
            </div>
          </div>
        </td>
      <% end %>
    </tr>
    <% if deck[:children].any? %>
      <% render_deck_rows.call(deck[:children]) %>
    <% end %>
  <% end %>
<% end %>

<% render_deck_rows.call(decks) %>
