<%# Reusable modal dialog partial %>
<%# Usage: render "shared/modal", id: "my-modal", title: "Title" do %>
<%#   modal body content %>
<%# end %>
<div data-controller="modal">
  <%# Backdrop %>
  <div data-modal-target="backdrop"
       data-action="click->modal#closeOnBackdrop"
       class="hidden fixed inset-0 bg-black/50 z-40 transition-opacity"></div>

  <%# Dialog %>
  <div data-modal-target="dialog"
       class="hidden fixed inset-0 z-50 flex items-center justify-center p-4"
       id="<%= local_assigns[:id] || 'modal' %>">
    <div class="bg-white rounded-lg shadow-xl w-full <%= local_assigns[:size] || 'max-w-lg' %> max-h-[90vh] flex flex-col">
      <%# Header %>
      <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900"><%= local_assigns[:title] || "Dialog" %></h3>
        <button type="button" data-action="click->modal#close"
                class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <%# Body %>
      <div class="flex-1 overflow-y-auto px-6 py-4">
        <%= yield if block_given? %>
      </div>

      <% if local_assigns[:footer] %>
        <%# Footer %>
        <div class="px-6 py-4 border-t border-gray-200 flex justify-end space-x-3">
          <%= footer %>
        </div>
      <% end %>
    </div>
  </div>
</div>
