<% content_for :title, "Database Checks" %>
<% content_for :page_title, "Database Checks" %>

<div class="max-w-4xl mx-auto">
  <% if @check_database_logs.any? %>
    <div class="card p-0">
      <table class="w-full">
        <thead>
          <tr class="border-b border-gray-200">
            <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wider py-3 px-4">ID</th>
            <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wider py-3 px-4">Run At</th>
            <th class="w-10 py-3 px-3"></th>
          </tr>
        </thead>
        <tbody>
          <% @check_database_logs.each do |log| %>
            <tr class="border-b border-gray-100 last:border-0 hover:bg-gray-50">
              <td class="py-2 px-4 text-sm text-gray-900 font-mono">#<%= log.id %></td>
              <td class="py-2 px-4 text-sm text-gray-500"><%= log.created_at.strftime("%b %d, %Y %H:%M") %></td>
              <td class="py-2 px-3">
                <%= link_to check_database_log_path(log), class: "text-blue-600 hover:text-blue-700 text-sm" do %>
                  View
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="card text-center py-12">
      <p class="text-gray-500">No database checks recorded.</p>
    </div>
  <% end %>
</div>
