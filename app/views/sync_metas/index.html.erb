<% content_for :title, "Sync" %>
<% content_for :page_title, "Sync" %>

<% sync = mock_sync_status %>
<% devices = mock_sync_devices %>

<div class="max-w-2xl mx-auto space-y-6">
  <%# Connection status card %>
  <div class="card">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Connection Status</h3>

    <div class="space-y-4">
      <%# Connected indicator %>
      <div class="flex items-center gap-3">
        <% if sync[:connected] %>
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
          </span>
          <span class="text-sm font-medium text-green-700">Connected</span>
        <% else %>
          <span class="relative flex h-3 w-3">
            <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
          </span>
          <span class="text-sm font-medium text-red-700">Disconnected</span>
        <% end %>
      </div>

      <%# Status details %>
      <dl class="grid grid-cols-2 gap-3 text-sm">
        <div>
          <dt class="text-gray-500">Last Sync</dt>
          <dd class="font-medium text-gray-900"><%= sync[:last_sync] %></dd>
        </div>
        <div>
          <dt class="text-gray-500">Server URL</dt>
          <dd class="font-medium text-gray-900 truncate"><%= sync[:server_url] %></dd>
        </div>
        <div>
          <dt class="text-gray-500">Pending Changes</dt>
          <dd class="font-medium text-gray-900">
            <% if sync[:pending_changes] > 0 %>
              <span class="inline-flex items-center gap-1">
                <%= sync[:pending_changes] %>
                <span class="w-2 h-2 rounded-full bg-yellow-400"></span>
              </span>
            <% else %>
              <span class="text-green-600">Up to date</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-gray-500">Server USN</dt>
          <dd class="font-medium text-gray-900"><%= sync[:server_usn] %></dd>
        </div>
      </dl>

      <%# Sync Now button %>
      <div class="pt-2">
        <%= button_to "Sync Now", sync_metas_path, method: :post, class: "btn-primary inline-flex items-center gap-1.5" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Sync Now
        <% end %>
      </div>
    </div>
  </div>

  <%# Devices table %>
  <div class="card p-0">
    <div class="px-4 py-3 border-b border-gray-200">
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Devices</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-gray-200">
            <th class="text-left py-2 px-3 text-xs font-medium text-gray-500 uppercase">Device</th>
            <th class="text-left py-2 px-3 text-xs font-medium text-gray-500 uppercase">Last Sync</th>
            <th class="text-left py-2 px-3 text-xs font-medium text-gray-500 uppercase">USN</th>
            <th class="text-left py-2 px-3 text-xs font-medium text-gray-500 uppercase">Type</th>
          </tr>
        </thead>
        <tbody>
          <% devices.each do |device| %>
            <tr class="border-b border-gray-100 hover:bg-gray-50">
              <%# Device name with icon %>
              <td class="py-2 px-3">
                <div class="flex items-center gap-2">
                  <% case device[:device_type] %>
                  <% when "web" %>
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                    </svg>
                  <% when "android" %>
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                    </svg>
                  <% when "desktop" %>
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  <% end %>
                  <span class="font-medium text-gray-900"><%= device[:client_name] %></span>
                </div>
              </td>

              <%# Last sync %>
              <td class="py-2 px-3 text-gray-500"><%= device[:last_sync] %></td>

              <%# USN %>
              <td class="py-2 px-3 text-gray-500"><%= device[:usn] %></td>

              <%# Device type badge %>
              <td class="py-2 px-3">
                <span class="text-xs font-medium px-2 py-0.5 rounded-full
                  <%= case device[:device_type]
                      when 'web' then 'bg-blue-100 text-blue-800'
                      when 'android' then 'bg-green-100 text-green-800'
                      when 'desktop' then 'bg-purple-100 text-purple-800'
                      end %>">
                  <%= device[:device_type].titleize %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%# Force full sync %>
  <div class="flex items-center justify-end">
    <%= button_to "Force Full Sync", sync_metas_path, method: :post, class: "btn-danger inline-flex items-center gap-1.5", data: { turbo_confirm: "Force a full sync? This will upload your entire collection to the server and may take several minutes. Any unsynced changes on other devices may be lost." } do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      Force Full Sync
    <% end %>
  </div>
</div>
