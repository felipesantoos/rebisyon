<% content_for :title, "Sync" %>
<% content_for :page_title, "Sync" %>

<div class="max-w-2xl mx-auto space-y-6">
  <div class="card">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Connection Status</h3>
    <div class="space-y-4">
      <div class="flex items-center gap-3">
        <% if @sync_status[:connected] %>
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
          </span>
          <span class="text-sm font-medium text-green-700">Connected</span>
        <% else %>
          <span class="relative flex h-3 w-3">
            <span class="relative inline-flex rounded-full h-3 w-3 bg-gray-400"></span>
          </span>
          <span class="text-sm font-medium text-gray-500">No sync data</span>
        <% end %>
      </div>

      <dl class="grid grid-cols-2 gap-3 text-sm">
        <div>
          <dt class="text-gray-500">Last Sync</dt>
          <dd class="font-medium text-gray-900"><%= @sync_status[:last_sync] %></dd>
        </div>
        <div>
          <dt class="text-gray-500">Server USN</dt>
          <dd class="font-medium text-gray-900"><%= @sync_status[:server_usn] %></dd>
        </div>
      </dl>
    </div>
  </div>

  <% if @devices.any? %>
    <div class="card p-0">
      <div class="px-4 py-3 border-b border-gray-200">
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Devices</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-2 px-3 text-xs font-medium text-gray-500 uppercase">Client ID</th>
              <th class="text-left py-2 px-3 text-xs font-medium text-gray-500 uppercase">Last Sync</th>
              <th class="text-left py-2 px-3 text-xs font-medium text-gray-500 uppercase">USN</th>
            </tr>
          </thead>
          <tbody>
            <% @devices.each do |device| %>
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="py-2 px-3 font-medium text-gray-900"><%= device.client_id %></td>
                <td class="py-2 px-3 text-gray-500"><%= device.last_sync&.strftime("%Y-%m-%d %H:%M") || "Never" %></td>
                <td class="py-2 px-3 text-gray-500"><%= device.last_sync_usn %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="card text-center py-12">
      <p class="text-sm text-gray-500">No sync devices found.</p>
    </div>
  <% end %>
</div>
