<% content_for :title, "Deleted Item Details" %>
<% content_for :page_title, "Deleted Item Details" %>

<div class="max-w-2xl mx-auto space-y-6">
  <%= link_to deletion_logs_path, class: "inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Trash
  <% end %>

  <div class="card">
    <div class="flex items-start justify-between">
      <div class="space-y-2">
        <span class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full
          <%= case @log.object_type
              when 'note' then 'bg-blue-100 text-blue-800'
              when 'card' then 'bg-green-100 text-green-800'
              when 'deck' then 'bg-purple-100 text-purple-800'
              when 'note_type' then 'bg-orange-100 text-orange-800'
              end %>">
          <%= @log.object_type.titleize %>
        </span>
        <h2 class="text-lg font-semibold text-gray-900"><%= @log.summary %></h2>
        <p class="text-sm text-gray-500">Deleted on <%= @log.deleted_at.strftime("%Y-%m-%d %H:%M") %></p>
      </div>
    </div>
  </div>

  <% if @log.object_data.present? %>
    <div class="card">
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Original Data</h3>
      <dl class="space-y-3">
        <% @log.object_data.each do |key, value| %>
          <div class="flex items-baseline gap-3">
            <dt class="text-sm text-gray-500 w-28 flex-shrink-0"><%= key.titleize %></dt>
            <dd class="text-sm font-medium text-gray-900">
              <% if value.is_a?(Hash) %>
                <% value.each do |k, v| %>
                  <div><strong><%= k %>:</strong> <%= v %></div>
                <% end %>
              <% elsif value.is_a?(Array) %>
                <%= value.join(", ") %>
              <% else %>
                <%= value %>
              <% end %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  <% end %>

  <div class="flex items-center justify-between">
    <%= button_to "Restore", restore_deletion_log_path(@log), method: :post, class: "btn-primary" %>
  </div>
</div>
