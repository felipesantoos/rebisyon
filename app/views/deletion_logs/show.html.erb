<% content_for :title, "Deleted Item Details" %>
<% content_for :page_title, "Deleted Item Details" %>

<% log = mock_deletion_log_detail %>

<div class="max-w-2xl mx-auto space-y-6">
  <%# Back link %>
  <%= link_to deletion_logs_path, class: "inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Trash
  <% end %>

  <%# Summary card %>
  <div class="card">
    <div class="flex items-start justify-between">
      <div class="space-y-2">
        <span class="inline-flex items-center gap-1.5 text-xs font-medium px-2 py-0.5 rounded-full
          <%= case log[:object_type]
              when 'note' then 'bg-blue-100 text-blue-800'
              when 'card' then 'bg-green-100 text-green-800'
              when 'deck' then 'bg-purple-100 text-purple-800'
              when 'note_type' then 'bg-orange-100 text-orange-800'
              end %>">
          <span class="w-1.5 h-1.5 rounded-full
            <%= case log[:object_type]
                when 'note' then 'bg-blue-500'
                when 'card' then 'bg-green-500'
                when 'deck' then 'bg-purple-500'
                when 'note_type' then 'bg-orange-500'
                end %>"></span>
          <%= log[:object_type].titleize %>
        </span>
        <h2 class="text-lg font-semibold text-gray-900"><%= log[:summary] %></h2>
        <p class="text-sm text-gray-500">Deleted on <%= log[:deleted_at] %></p>
      </div>
    </div>
  </div>

  <%# Original data card %>
  <div class="card">
    <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">Original Data</h3>

    <dl class="space-y-3">
      <% if log[:object_data][:note_type] %>
        <div class="flex items-baseline gap-3">
          <dt class="text-sm text-gray-500 w-28 flex-shrink-0">Note Type</dt>
          <dd class="text-sm font-medium text-gray-900"><%= log[:object_data][:note_type] %></dd>
        </div>
      <% end %>

      <% if log[:object_data][:deck] %>
        <div class="flex items-baseline gap-3">
          <dt class="text-sm text-gray-500 w-28 flex-shrink-0">Deck</dt>
          <dd class="text-sm font-medium text-gray-900"><%= log[:object_data][:deck] %></dd>
        </div>
      <% end %>

      <% if log[:object_data][:fields] %>
        <% log[:object_data][:fields].each do |field_name, field_value| %>
          <div class="flex items-baseline gap-3">
            <dt class="text-sm text-gray-500 w-28 flex-shrink-0"><%= field_name %></dt>
            <dd class="text-sm font-medium text-gray-900"><%= field_value %></dd>
          </div>
        <% end %>
      <% end %>

      <% if log[:object_data][:tags] %>
        <div class="flex items-baseline gap-3">
          <dt class="text-sm text-gray-500 w-28 flex-shrink-0">Tags</dt>
          <dd class="flex flex-wrap gap-1.5">
            <% log[:object_data][:tags].each do |tag| %>
              <span class="tag-chip"><%= tag %></span>
            <% end %>
          </dd>
        </div>
      <% end %>

      <% if log[:object_data][:cards_count] %>
        <div class="flex items-baseline gap-3">
          <dt class="text-sm text-gray-500 w-28 flex-shrink-0">Cards</dt>
          <dd class="text-sm font-medium text-gray-900"><%= log[:object_data][:cards_count] %></dd>
        </div>
      <% end %>

      <% if log[:object_data][:created_at] %>
        <div class="flex items-baseline gap-3">
          <dt class="text-sm text-gray-500 w-28 flex-shrink-0">Created</dt>
          <dd class="text-sm font-medium text-gray-900"><%= log[:object_data][:created_at] %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <%# Action buttons %>
  <div class="flex items-center justify-between">
    <%= button_to "Restore", restore_deletion_log_path(log[:id]), method: :post, class: "btn-primary inline-flex items-center gap-1.5" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
      </svg>
      Restore
    <% end %>

    <%= button_to deletion_log_path(log[:id]), method: :delete, class: "btn-danger inline-flex items-center gap-1.5", data: { turbo_confirm: "Permanently delete this item? This cannot be undone." } do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      Delete Permanently
    <% end %>
  </div>
</div>
