<%= form_with(model: saved_search) do |form| %>
  <% if saved_search.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6" role="alert">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">
          <%= pluralize(saved_search.errors.count, "error") %> prohibited this saved search from being saved:
        </h3>
        <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
          <% saved_search.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :search_query, "Search Query", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :search_query, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex items-center space-x-4 pt-4">
      <%= form.submit class: "btn-primary" %>
      <%= link_to "Cancel", saved_searches_path, class: "btn-secondary" %>
    </div>
  </div>
<% end %>
