<% content_for :title, "Saved Searches" %>
<% content_for :page_title, "Saved Searches" %>
<% mock = mock_saved_searches %>

<div class="max-w-2xl mx-auto space-y-6">
  <div class="flex items-center justify-between">
    <p class="text-sm text-gray-500"><%= mock.size %> saved searches</p>
    <%= link_to new_saved_search_path, class: "btn-primary inline-flex items-center gap-1.5" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add
    <% end %>
  </div>

  <div class="card p-0">
    <div class="divide-y divide-gray-200">
      <% mock.each do |search| %>
        <div class="flex items-center justify-between px-4 py-3 hover:bg-gray-50 transition-colors group">
          <div class="flex-1 min-w-0 flex items-center gap-3">
            <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900"><%= search[:name] %></p>
              <p class="text-xs text-gray-500 font-mono truncate"><%= search[:query] %></p>
            </div>
            <% if search[:built_in] %>
              <span class="text-[10px] font-medium text-gray-400 bg-gray-100 px-2 py-0.5 rounded-full">Built-in</span>
            <% end %>
          </div>
          <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
            <%= link_to notes_path(search: search[:query]), class: "p-1.5 text-blue-600 hover:text-blue-700 rounded hover:bg-blue-50", title: "Run search" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
              </svg>
            <% end %>
            <% unless search[:built_in] %>
              <button class="p-1.5 text-gray-400 hover:text-gray-600 rounded hover:bg-gray-100" title="Edit">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              </button>
              <button class="p-1.5 text-gray-400 hover:text-red-600 rounded hover:bg-red-50" title="Delete">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
