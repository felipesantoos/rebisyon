<% content_for :title, "Saved Searches" %>
<% content_for :page_title, "Saved Searches" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold text-gray-900">Saved Searches</h1>
    <%= link_to "New Saved Search", new_saved_search_path, class: "btn-primary" %>
  </div>

  <% if @saved_searches.any? %>
    <div class="card">
      <div class="divide-y divide-gray-200">
        <% @saved_searches.each do |search| %>
          <div class="flex items-center justify-between py-3">
            <div>
              <p class="text-sm font-medium text-gray-900"><%= search.name %></p>
              <p class="text-sm text-gray-500"><%= search.search_query %></p>
            </div>
            <div class="flex items-center space-x-3">
              <%= link_to "Edit", edit_saved_search_path(search), class: "text-blue-600 hover:text-blue-700 text-sm" %>
              <%= button_to "Delete", saved_search_path(search), method: :delete,
                  class: "text-red-600 hover:text-red-700 text-sm",
                  data: { confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <p class="text-gray-500">No saved searches yet.</p>
  <% end %>
</div>
