<% content_for :title, "Profiles" %>
<% content_for :page_title, "Profiles" %>
<% content_for :page_actions do %>
  <%= link_to new_profile_path, class: "btn-primary inline-flex items-center gap-1.5" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Add Profile
  <% end %>
<% end %>

<div class="max-w-5xl mx-auto">
  <% if @profiles.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @profiles.each do |profile| %>
        <div class="card">
          <div class="flex items-start justify-between mb-3">
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= profile.name %></h3>
            </div>
            <% if profile.ankiweb_sync_enabled %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                Sync
              </span>
            <% else %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                No Sync
              </span>
            <% end %>
          </div>

          <div class="text-sm text-gray-500 mb-4">
            <p>Created: <%= profile.created_at.strftime("%Y-%m-%d") %></p>
            <% if profile.ankiweb_username.present? %>
              <p>AnkiWeb: <%= profile.ankiweb_username %></p>
            <% end %>
          </div>

          <div class="flex items-center gap-2 pt-3 border-t border-gray-200">
            <%= link_to "Edit", edit_profile_path(profile), class: "btn-secondary text-xs px-3 py-1.5" %>
            <%= button_to profile_path(profile), method: :delete, class: "btn-danger text-xs px-3 py-1.5",
                data: { turbo_confirm: "Are you sure you want to delete the profile '#{profile.name}'?" } do %>
              Delete
            <% end %>
            <%= link_to "View", profile_path(profile), class: "text-xs text-blue-600 hover:text-blue-700 font-medium ml-auto" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card text-center py-12">
      <p class="text-sm text-gray-500">No profiles yet.</p>
    </div>
  <% end %>
</div>
