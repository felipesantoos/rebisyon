<% content_for :title, "Import" %>
<% content_for :page_title, "Import" %>

<div class="max-w-2xl mx-auto space-y-6" data-controller="file-upload">
  <%# File upload zone %>
  <div class="card">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Select File</h2>
    <div class="border-2 border-dashed border-gray-300 rounded-lg p-12 text-center hover:border-blue-400 transition-colors"
         data-file-upload-target="dropZone"
         data-action="dragover->file-upload#dragOver drop->file-upload#drop dragleave->file-upload#dragLeave">
      <svg class="mx-auto w-12 h-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
      </svg>
      <p class="text-gray-600 mb-2">Drag and drop a file here, or</p>
      <button type="button" class="btn-primary" data-action="click->file-upload#triggerInput">
        Choose File
      </button>
      <input type="file" class="hidden" data-file-upload-target="input"
             data-action="change->file-upload#handleFile"
             accept=".apkg,.colpkg,.csv,.tsv,.txt">
      <p class="text-xs text-gray-400 mt-3">Supported: .apkg, .colpkg, .csv, .tsv, .txt</p>
    </div>

    <%# Selected file info %>
    <div class="hidden mt-4 p-3 bg-blue-50 rounded-md" data-file-upload-target="fileInfo">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <span class="text-sm font-medium text-blue-900" data-file-upload-target="fileName">file.apkg</span>
          <span class="text-xs text-blue-600" data-file-upload-target="fileSize">2.3 MB</span>
        </div>
        <button type="button" class="text-blue-600 hover:text-blue-800" data-action="click->file-upload#removeFile">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <%# Import options (shown after file selection) %>
  <div class="card">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Import Options</h2>
    <div class="space-y-4">
      <div>
        <label class="form-label">Import mode</label>
        <select class="form-select">
          <option>Update existing notes when first field matches</option>
          <option>Ignore lines where first field matches</option>
          <option>Import all, even if duplicate</option>
        </select>
      </div>
      <div>
        <label class="form-label">Target deck</label>
        <select class="form-select">
          <option>Use deck from file</option>
          <option>Default</option>
          <option>Japanese::Vocabulary</option>
          <option>Spanish::Vocabulary</option>
        </select>
      </div>
      <div>
        <label class="form-label">Note type</label>
        <select class="form-select">
          <option>Use note type from file</option>
          <option>Basic</option>
          <option>Basic (and reversed card)</option>
          <option>Cloze</option>
        </select>
      </div>
      <label class="flex items-center gap-3 cursor-pointer">
        <input type="checkbox" checked class="w-4 h-4 text-blue-600 border-gray-300 rounded">
        <span class="text-sm text-gray-700">Allow HTML in fields</span>
      </label>
    </div>
  </div>

  <%# CSV field mapping (mock) %>
  <div class="card">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Field Mapping</h2>
    <div class="space-y-3">
      <div class="flex items-center gap-3">
        <span class="text-sm text-gray-500 w-24">Column 1</span>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
        <select class="form-select w-auto">
          <option selected>Front</option>
          <option>Back</option>
          <option>Tags</option>
          <option>(skip)</option>
        </select>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-sm text-gray-500 w-24">Column 2</span>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
        <select class="form-select w-auto">
          <option>Front</option>
          <option selected>Back</option>
          <option>Tags</option>
          <option>(skip)</option>
        </select>
      </div>
    </div>
  </div>

  <%# Progress bar (hidden until import starts) %>
  <div class="hidden card" data-file-upload-target="progress">
    <div class="flex items-center justify-between mb-2">
      <span class="text-sm font-medium text-gray-700">Importing...</span>
      <span class="text-sm text-gray-500">0%</span>
    </div>
    <div class="w-full bg-gray-200 rounded-full h-2">
      <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
    </div>
  </div>

  <%# Actions %>
  <div class="flex items-center justify-between">
    <%= link_to "Cancel", root_path, class: "btn-secondary" %>
    <button class="btn-primary">Import</button>
  </div>
</div>
