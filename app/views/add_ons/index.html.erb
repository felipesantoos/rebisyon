<% content_for :title, "Add-ons" %>
<% content_for :page_title, "Add-ons" %>
<% content_for :page_actions do %>
  <%= link_to new_add_on_path, class: "btn-primary inline-flex items-center gap-1.5" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Get Add-ons
  <% end %>
  <%= link_to "#", class: "btn-secondary inline-flex items-center gap-1.5" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
    </svg>
    Check for Updates
  <% end %>
<% end %>

<div class="max-w-4xl mx-auto space-y-4">
  <p class="text-sm text-gray-600">
    <%= @add_ons.size %> add-on<%= @add_ons.size == 1 ? "" : "s" %> installed
  </p>

  <div class="space-y-3">
    <% @add_ons.each do |add_on| %>
      <div class="card" data-controller="toggle">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-1">
              <span class="font-semibold text-gray-900"><%= add_on[:name] %></span>
              <span class="text-gray-500 text-xs font-mono"><%= add_on[:code] %></span>
            </div>
            <div class="flex items-center gap-3 text-sm text-gray-500">
              <span>v<%= add_on[:version] %></span>
              <span>by <%= add_on[:author] %></span>
            </div>
          </div>

          <div class="flex items-center gap-4 ml-4">
            <%# Toggle Switch %>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox"
                     <%= "checked" if add_on[:enabled] %>
                     class="sr-only peer"
                     data-toggle-target="checkbox"
                     data-action="change->toggle#updateLabel">
              <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-blue-600"></div>
              <span class="ml-2 text-sm text-gray-600" data-toggle-target="label"><%= add_on[:enabled] ? "Enabled" : "Disabled" %></span>
            </label>

            <%# Actions %>
            <div class="flex items-center gap-2">
              <% if add_on[:has_config] %>
                <%= link_to "Configure", add_on_path(add_on[:id]), class: "text-sm text-blue-600 hover:text-blue-700" %>
              <% end %>
              <%= button_to add_on_path(add_on[:id]), method: :delete,
                  class: "text-sm text-red-600 hover:text-red-700",
                  data: { turbo_confirm: "Are you sure you want to remove this add-on?" } do %>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
