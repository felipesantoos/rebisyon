<% content_for :title, "Add-ons" %>
<% content_for :page_title, "Add-ons" %>
<% content_for :page_actions do %>
  <%= link_to new_add_on_path, class: "btn-primary inline-flex items-center gap-1.5" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Get Add-ons
  <% end %>
<% end %>

<div class="max-w-4xl mx-auto space-y-4">
  <p class="text-sm text-gray-600"><%= @add_ons.size %> add-on<%= @add_ons.size == 1 ? "" : "s" %> installed</p>

  <% if @add_ons.any? %>
    <div class="space-y-3">
      <% @add_ons.each do |add_on| %>
        <div class="card">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-1">
                <span class="font-semibold text-gray-900"><%= add_on.name %></span>
                <span class="text-gray-500 text-xs font-mono"><%= add_on.code %></span>
              </div>
              <div class="flex items-center gap-3 text-sm text-gray-500">
                <span>v<%= add_on.version %></span>
              </div>
            </div>
            <div class="flex items-center gap-4 ml-4">
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= add_on.enabled ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= add_on.enabled ? "Enabled" : "Disabled" %>
              </span>
              <div class="flex items-center gap-2">
                <% if add_on.config_json.present? %>
                  <%= link_to "Configure", add_on_path(add_on), class: "text-sm text-blue-600 hover:text-blue-700" %>
                <% end %>
                <%= button_to add_on_path(add_on), method: :delete,
                    class: "text-sm text-red-600 hover:text-red-700",
                    data: { turbo_confirm: "Are you sure you want to remove this add-on?" } do %>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card text-center py-12">
      <p class="text-sm text-gray-500">No add-ons installed.</p>
    </div>
  <% end %>
</div>
