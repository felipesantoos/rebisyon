<% content_for :title, "Get Add-ons" %>
<% content_for :page_title, "Get Add-ons" %>

<div class="max-w-2xl mx-auto space-y-6">
  <%= link_to "Back to add-ons", add_ons_path, class: "text-sm text-gray-600 hover:text-gray-900 inline-flex items-center gap-1" %>

  <div class="card">
    <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-4">Install Add-on</h3>

    <%= form_with url: add_ons_path, method: :post, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :code, "Add-on Code", class: "form-label" %>
        <%= form.text_field :code, class: "form-input w-full", placeholder: "Enter add-on code" %>
      </div>

      <div>
        <%= form.submit "Install", class: "btn-primary" %>
      </div>
    <% end %>

    <p class="mt-4 text-sm text-gray-500">
      You can find add-on codes on the
      <a href="https://ankiweb.net/shared/addons" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-700 underline">AnkiWeb add-ons page</a>.
      Each add-on has a unique numeric code that you can copy and paste here.
    </p>
  </div>
</div>
