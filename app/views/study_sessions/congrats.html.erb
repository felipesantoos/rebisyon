<% content_for :title, "Congratulations!" %>
<% content_for :page_title, "Study Complete" %>
<%
  # Compute session stats from today's reviews for this deck
  today_reviews = Review.joins(card: :deck)
                        .where(decks: { id: @deck.id })
                        .where("reviews.created_at >= ?", Date.today.beginning_of_day)
  cards_studied = today_reviews.select(:card_id).distinct.count
  total_reviews = today_reviews.count
  again_count = today_reviews.where(rating: 1).count
  hard_count = today_reviews.where(rating: 2).count
  good_count = today_reviews.where(rating: 3).count
  easy_count = today_reviews.where(rating: 4).count
  correct_count = good_count + easy_count
  correct_percent = total_reviews > 0 ? (correct_count.to_f / total_reviews * 100).round(1) : 0
  total_time_ms = today_reviews.sum(:time_ms)
  time_spent = if total_time_ms >= 60_000
    "#{(total_time_ms / 60_000.0).round(0)} minutes"
  else
    "#{(total_time_ms / 1000.0).round(0)} seconds"
  end

  # Next due cards
  now_ms = (Time.current.to_f * 1000).to_i
  next_due_count = @deck.cards.active.where(state: :review).where("due > ?", now_ms).count +
                   @deck.cards.active.where(state: [:learn, :relearn]).count
%>

<div class="max-w-lg mx-auto text-center space-y-8 py-12">
  <%# Checkmark icon %>
  <div class="mx-auto w-20 h-20 rounded-full bg-green-100 flex items-center justify-center">
    <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
    </svg>
  </div>

  <div>
    <h2 class="text-2xl font-bold text-gray-900">Congratulations!</h2>
    <p class="mt-2 text-gray-500">You have finished this deck for now.</p>
  </div>

  <%# Session stats %>
  <div class="card">
    <div class="grid grid-cols-3 gap-6">
      <div>
        <p class="text-3xl font-bold text-gray-900"><%= cards_studied %></p>
        <p class="text-sm text-gray-500">Cards Studied</p>
      </div>
      <div>
        <p class="text-3xl font-bold text-gray-900"><%= time_spent %></p>
        <p class="text-sm text-gray-500">Time Spent</p>
      </div>
      <div>
        <p class="text-3xl font-bold text-green-600"><%= correct_percent %>%</p>
        <p class="text-sm text-gray-500">Correct</p>
      </div>
    </div>

    <%# Rating breakdown %>
    <div class="mt-6 pt-4 border-t border-gray-200">
      <div class="flex items-center justify-center gap-6 text-sm">
        <span><span class="font-semibold text-red-600"><%= again_count %></span> Again</span>
        <span><span class="font-semibold text-gray-500"><%= hard_count %></span> Hard</span>
        <span><span class="font-semibold text-green-600"><%= good_count %></span> Good</span>
        <span><span class="font-semibold text-blue-600"><%= easy_count %></span> Easy</span>
      </div>
    </div>
  </div>

  <%# Next due info %>
  <% if next_due_count > 0 %>
    <p class="text-sm text-gray-500">
      <strong><%= next_due_count %> cards</strong> remaining to review later.
    </p>
  <% end %>

  <%# Action buttons %>
  <div class="flex items-center justify-center gap-3">
    <%= link_to root_path, class: "btn-primary" do %>
      Back to Decks
    <% end %>
    <button type="button" class="btn-secondary" data-action="click->modal#open">
      Custom Study
    </button>
  </div>
</div>
