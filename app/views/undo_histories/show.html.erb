<% content_for :title, "Operation Details" %>
<% content_for :page_title, "Operation Details" %>

<% entry = mock_undo_history_detail %>

<%
  operation_colors = {
    "delete" => "bg-red-100 text-red-800",
    "edit" => "bg-blue-100 text-blue-800",
    "review" => "bg-green-100 text-green-800",
    "add" => "bg-emerald-100 text-emerald-800",
    "move" => "bg-purple-100 text-purple-800",
    "bulk_edit" => "bg-indigo-100 text-indigo-800",
    "suspend" => "bg-yellow-100 text-yellow-800",
    "import" => "bg-cyan-100 text-cyan-800"
  }
%>

<div class="max-w-2xl mx-auto space-y-6">
  <%# Back link %>
  <%= link_to undo_histories_path, class: "inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Undo History
  <% end %>

  <%# Summary card %>
  <div class="card">
    <div class="space-y-2">
      <span class="inline-block text-xs font-medium px-2.5 py-1 rounded-full <%= operation_colors[entry[:operation]] || 'bg-gray-100 text-gray-800' %>">
        <%= entry[:operation].titleize %>
      </span>
      <h2 class="text-lg font-semibold text-gray-900"><%= entry[:summary] %></h2>
      <p class="text-sm text-gray-500"><%= entry[:timestamp] %></p>
    </div>
  </div>

  <%# Diff view for edit operations %>
  <% if entry[:operation] == "edit" && entry[:before] && entry[:after] %>
    <div class="space-y-4">
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Changes</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <%# Before card %>
        <div class="rounded-lg border border-red-200 bg-red-50 p-4">
          <h4 class="text-xs font-semibold text-red-700 uppercase tracking-wider mb-3 flex items-center gap-1.5">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
            </svg>
            Before
          </h4>
          <dl class="space-y-2">
            <% entry[:before].each do |field_name, field_value| %>
              <div>
                <dt class="text-xs text-red-600 font-medium"><%= field_name %></dt>
                <dd class="text-sm text-red-900 mt-0.5"><%= field_value %></dd>
              </div>
            <% end %>
          </dl>
        </div>

        <%# After card %>
        <div class="rounded-lg border border-green-200 bg-green-50 p-4">
          <h4 class="text-xs font-semibold text-green-700 uppercase tracking-wider mb-3 flex items-center gap-1.5">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            After
          </h4>
          <dl class="space-y-2">
            <% entry[:after].each do |field_name, field_value| %>
              <div>
                <dt class="text-xs text-green-600 font-medium"><%= field_name %></dt>
                <dd class="text-sm text-green-900 mt-0.5"><%= field_value %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
    </div>
  <% end %>

  <%# Back to history %>
  <div class="flex items-center">
    <%= link_to "Back to Undo History", undo_histories_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
  </div>
</div>
