<% content_for :title, "Operation Details" %>
<% content_for :page_title, "Operation Details" %>

<% operation_colors = {
  "edit_note" => "bg-blue-100 text-blue-800",
  "delete_note" => "bg-red-100 text-red-800",
  "move_card" => "bg-purple-100 text-purple-800",
  "change_flag" => "bg-yellow-100 text-yellow-800",
  "add_tag" => "bg-emerald-100 text-emerald-800",
  "remove_tag" => "bg-orange-100 text-orange-800",
  "change_deck" => "bg-indigo-100 text-indigo-800"
} %>

<div class="max-w-2xl mx-auto space-y-6">
  <%= link_to undo_histories_path, class: "inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-900" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Undo History
  <% end %>

  <div class="card">
    <div class="space-y-2">
      <span class="inline-block text-xs font-medium px-2.5 py-1 rounded-full <%= operation_colors[@entry.operation_type] || 'bg-gray-100 text-gray-800' %>">
        <%= @entry.operation_type.titleize %>
      </span>
      <h2 class="text-lg font-semibold text-gray-900"><%= @entry.summary %></h2>
      <p class="text-sm text-gray-500"><%= @entry.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
  </div>

  <% if @entry.operation_data.present? %>
    <% data = @entry.operation_data %>
    <% if data["before"].present? && data["after"].present? %>
      <div class="space-y-4">
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Changes</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="rounded-lg border border-red-200 bg-red-50 p-4">
            <h4 class="text-xs font-semibold text-red-700 uppercase tracking-wider mb-3">Before</h4>
            <dl class="space-y-2">
              <% data["before"].each do |field_name, field_value| %>
                <div>
                  <dt class="text-xs text-red-600 font-medium"><%= field_name %></dt>
                  <dd class="text-sm text-red-900 mt-0.5"><%= field_value %></dd>
                </div>
              <% end %>
            </dl>
          </div>
          <div class="rounded-lg border border-green-200 bg-green-50 p-4">
            <h4 class="text-xs font-semibold text-green-700 uppercase tracking-wider mb-3">After</h4>
            <dl class="space-y-2">
              <% data["after"].each do |field_name, field_value| %>
                <div>
                  <dt class="text-xs text-green-600 font-medium"><%= field_name %></dt>
                  <dd class="text-sm text-green-900 mt-0.5"><%= field_value %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="flex items-center">
    <%= link_to "Back to Undo History", undo_histories_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
  </div>
</div>
