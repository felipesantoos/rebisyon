<%# Top navigation bar - Context-aware actions %>
<header class="bg-white border-b border-gray-200 px-6 py-3">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%# Mobile menu toggle %>
      <button class="lg:hidden p-1 text-gray-500 hover:text-gray-700" data-action="click->mobile-menu#toggle">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
      <% if content_for?(:page_title) %>
        <h1 class="text-lg font-semibold text-gray-900">
          <%= yield :page_title %>
        </h1>
      <% end %>
    </div>
    <div class="flex items-center gap-2">
      <% if content_for?(:page_actions) %>
        <%= yield :page_actions %>
      <% else %>
        <%= link_to new_note_path, class: "btn-primary inline-flex items-center gap-1.5" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add
        <% end %>
      <% end %>
    </div>
  </div>
</header>
