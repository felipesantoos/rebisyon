<%# Sidebar navigation - Clean admin style %>
<aside class="w-64 bg-white border-r border-gray-200 flex flex-col">
  <%# Logo/Brand %>
  <div class="p-6 border-b border-gray-200">
    <%= link_to root_path, class: "text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors" do %>
      Rebisyon
    <% end %>
  </div>

  <%# Navigation %>
  <nav class="flex-1 p-4 space-y-6 overflow-y-auto">
    <div>
      <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Study</h3>
      <div class="space-y-1">
        <%= link_to dashboard_path, class: "block px-3 py-2 text-sm text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900 transition-colors #{'bg-blue-50 text-blue-700 font-medium' if current_page?(dashboard_path)}" do %>
          Dashboard
        <% end %>
        <%= link_to decks_path, class: "block px-3 py-2 text-sm text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900 transition-colors #{'bg-blue-50 text-blue-700 font-medium' if request.path.start_with?('/decks')}" do %>
          Decks
        <% end %>
      </div>
    </div>

    <div>
      <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Manage</h3>
      <div class="space-y-1">
        <%= link_to notes_path, class: "block px-3 py-2 text-sm text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900 transition-colors #{'bg-blue-50 text-blue-700 font-medium' if request.path.start_with?('/notes')}" do %>
          Browse
        <% end %>
        <%= link_to note_types_path, class: "block px-3 py-2 text-sm text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900 transition-colors #{'bg-blue-50 text-blue-700 font-medium' if request.path.start_with?('/note_types')}" do %>
          Note Types
        <% end %>
      </div>
    </div>

    <div>
      <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Analytics</h3>
      <div class="space-y-1">
        <%= link_to statistics_path, class: "block px-3 py-2 text-sm text-gray-700 rounded-md hover:bg-gray-100 hover:text-gray-900 transition-colors #{'bg-blue-50 text-blue-700 font-medium' if request.path.start_with?('/statistics')}" do %>
          Statistics
        <% end %>
      </div>
    </div>
  </nav>

  <%# User section %>
  <div class="p-4 border-t border-gray-200 bg-gray-50">
    <p class="text-xs text-gray-600 mb-2 truncate" title="<%= current_user.email %>">
      <%= current_user.email %>
    </p>
    <div class="flex items-center space-x-2 text-xs">
      <%= link_to edit_user_preferences_path, class: "text-blue-600 hover:text-blue-700 hover:underline" do %>
        Preferences
      <% end %>
      <span class="text-gray-400">|</span>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, 
          class: "text-blue-600 hover:text-blue-700 hover:underline bg-transparent border-none p-0 cursor-pointer" %>
    </div>
  </div>
</aside>
